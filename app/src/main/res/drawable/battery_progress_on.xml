<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 배경 (검은색) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- 검은 배경 -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- 흰색 테두리 -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FF00" /> <!-- 흰색 내부 (테두리 포함) -->
            <stroke android:width="2dp" android:color="#FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- 내부 채워지는 영역 (진짜 배터리 잔량) -->
    <item android:id="@android:id/progress">
        <inset
            android:insetLeft="8dp"
            android:insetTop="8dp"
            android:insetRight="16dp"
            android:insetBottom="8dp">
            <clip>
                <shape android:shape="rectangle">
                    <solid android:color="#FF00FF" /> <!-- 배터리 잔량 색 -->
                    <corners android:radius="4dp" />
                </shape>
            </clip>
        </inset>
    </item>

    <!-- 오른쪽 돌출된 배터리 팁 -->
    <item android:left="180dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:topRightRadius="6dp" android:bottomRightRadius="6dp" />
        </shape>
    </item>

</layer-list>